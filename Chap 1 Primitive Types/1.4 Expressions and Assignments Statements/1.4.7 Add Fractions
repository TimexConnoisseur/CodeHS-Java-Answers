public class AddFractions
{
    public static void main(String[] args)
    {
        //Your code goes here!
        int num1 = 1;
        int den1 = 2;
        int num2 = 2;
        int den2 = 5;

        int calcNum = (num1 * den2) + (den1 * num2);
        int calcDen = den1 * den2;

        System.out.println("The numerator of the first fraction is" + num1);
        System.out.println("The denominator of the first fraction is" + den2);
        System.out.println("The numerator of the second fraction is" + num2);
        System.out.println("The denominator of the second fraction is" + den2);
        System.out.println("The sum of " + num1 + "/" + num2 + " + " + num2 + "/" + den2 + " = " + calcNum + "/" + calcDen);

    }
}
